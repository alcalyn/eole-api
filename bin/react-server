<?php

require_once __DIR__.'/../vendor/autoload.php';

use Eole\Silex\Application as SilexApplication;
use Eole\WebSocket\Server as WebSocketServer;

$app = new SilexApplication(array(
    'project.root' => dirname(__DIR__),
    'env' => 'dev',
    'debug' => true,
));

$websocketServer = new WebSocketServer($app);

$websocketServer->run();
